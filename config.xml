<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
xmlns:gap = "http://phonegap.com/ns/1.0"
id        = "com.vib.issueTracker_mobile"
versionCode="10"
version   = "0.0.1">

	<!-- versionCode is optional and Android only -->

	<name>IssueTracker</name>
	<description>IssueTracker</description>
	<author href="https://build.phonegap.com" email="support@phonegap.com">AnandRaj Elangovan</author>
	<icon src="icon.png" />
	<gap:splash src="splash.png" gap:platform="android" gap:density="ldpi"/>
	<preference name="phonegap-version" value="3.3.0" />
	<preference name="android-installLocation" value="auto" />
	<!--<preference name="orientation" value="portrait" />-->
	<preference name="fullscreen" value="false" />
	<!--<preference name="splash-screen-duration" value="5000"/>-->

	<!--below line specifies that phonegap builds the application for only android, To build for other platforms add specific tags -->
	<gap:platform name="android" />
	<!--<gap:platform name="ios" />-->
	<gap:platform name="winphone" />
	<gap:plugin name="org.apache.cordova.network-information" />
	<!--<gap:plugin name="org.apache.cordova.dialogs" />-->
	<!--<gap:plugin name="com.dileep.plugins.datepicker" />-->

</widget>